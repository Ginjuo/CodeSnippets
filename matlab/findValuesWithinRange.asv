clc; clear; close all;

% Generating signal
fs = 500;
t = 2;
N = t*fs;
t_axis = (1:N)'./fs;
f_axis_shifted = (-N/2:1:(N/2-1))'.*(fs/N);
f = 50;
x = cos(2*pi*f*t_axis); % cosinus
n = wgn(N,1,0);         % noise
s = x+n;
s_fft = abs(fftshift(fft(s)))./N;

Nin = s_fft;
Sin(f_axis_shifted > (f-1) & f_axis_shifted < (f+1)) = 0;
Sin(f_axis_shifted < -(f-1) & f_axis_shifted > -(f+1)) = 0;
N

figure(); plot(f_axis_shifted, s_fft);
figure(); plot(f_axis_shifted, Sin);
 
